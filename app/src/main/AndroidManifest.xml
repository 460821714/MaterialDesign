<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.materialdesign">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name="com.materialdesign.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.materialdesign.module.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.materialdesign.module.ButtonColorActivity"
            android:screenOrientation="portrait"
            android:label="ButtonColor"/>

        <activity
            android:name="com.materialdesign.module.PercentLayoutActivity"
            android:screenOrientation="portrait"
            android:label="Percent Layout"
            android:parentActivityName=".module.MainActivity"/>

        <activity
            android:name="com.materialdesign.module.DataBindingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.materialdesign.module.LoadingMoreActivity"
            android:screenOrientation="portrait"
            android:label="Loading More"/>

        <activity
            android:name="com.materialdesign.module.NetworkActivity"
            android:screenOrientation="portrait"
            android:label="Network"/>

    </application>

</manifest>
